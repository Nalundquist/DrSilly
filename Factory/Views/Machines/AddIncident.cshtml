@{
	Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Report a Mechanical Failure with @Model.Name</h4>

@using (Html.BeginForm())
{
	@Html.Hidden("machine", Model)
	@Html.Label("Date of Malfunction/Break")
	@Html.TextBox("MalfunctionDate")
	@Html.Label("Assigned Repair Technician")
	@Html.DropDownList("EngineerId")
	<input type="submit" value="Submit Incident"/>
}
